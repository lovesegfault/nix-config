{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "github-actions": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/modules/flake-parts/actions\\.nix$/"
      ],
      "matchStrings": [
        "(?<attrName>[a-z][-a-z]*)\\s*=\\s*\"(?<depName>[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+)@(?<currentDigest>[a-f0-9]+)\";\\s*#\\s*(?<currentValue>v?[\\d.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "autoReplaceStringTemplate": "{{{attrName}}} = \"{{{depName}}}@{{{newDigest}}}\"; # {{{newValue}}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "automerge": false,
      "pinDigests": true,
      "commitMessagePrefix": "chore(actions):"
    }
  ]
}
