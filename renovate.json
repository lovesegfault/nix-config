{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "github-actions": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["modules/flake-parts/actions\\.nix$"],
      "matchStrings": [
        "(?<attrName>[a-z][-a-z]*)\\s*=\\s*\"(?<depName>[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+)@(?<currentDigest>[a-f0-9]+)\";\\s*#\\s*(?<currentValue>v?[\\d.]+|release/v?[\\d.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "autoReplaceStringTemplate": "{{{attrName}}} = \"{{{depName}}}@{{{newDigest}}}\"; # {{{newValue}}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["github-tags"],
      "automerge": false,
      "commitMessagePrefix": "chore(actions):"
    }
  ]
}
